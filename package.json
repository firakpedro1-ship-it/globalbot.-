import{useState}from"react";import{openai}from"../lib/openaiClient";export default function Home(){const[message,setMessage]=useState("");const[chat,setChat]=useState([]);const sendMessage=async()=>{const response=await openai.chat.completions.create({model:"gpt-3.5-turbo",messages:[{role:"user",content:message}]});setChat([...chat,{user:message,bot:response.choices[0].message.content}]);setMessage("")};return<div>{chat.map((c,i)=><div key={i}><p><b>VocÃª:</b>{c.user}</p><p><b>Bot:</b>{c.bot}</p></div>)}<input value={message} onChange={e=>setMessage(e.target.value)}/><button onClick={sendMessage}>Enviar</button></div>}